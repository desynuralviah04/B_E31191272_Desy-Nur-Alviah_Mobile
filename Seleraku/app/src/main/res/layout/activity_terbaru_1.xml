<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#EFEFEF"
    android:layout_height="match_parent"
    tools:context=".Terbaru_1">
    <!-- navigasi bar-->
    <androidx.appcompat.widget.Toolbar
        android:gravity="center"
        android:background="@drawable/khusus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="PRODUK BARU"
                android:textColor="@color/warnaputih"
                android:textSize="20dp"/>
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>
    <ScrollView
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <ImageView
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="196dp"
        android:src="@drawable/bakar"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="15dp"/>
    <TextView
        android:textColor="@color/texthitam"
        android:textStyle="bold"
        android:textSize="20dp"
        android:gravity="center_horizontal"
        android:text="SAJIAN AYAM TERBARU"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"/>
    <TextView
        android:textColor="@color/texthitam"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:textSize="15dp"
        android:text="Ayam bakar yang paling sering kita temuin di Jakarta udah pasti yang berbumbu kecap. Nah, salah satu ayam bakar berbumbu kecap paling terkenal di Jakarta dan kota besar lainnya ya ini, ayam bakar SELERAKU! salah satu ini selalu rame banget! Wajar si, ayamnya emang super enak! Bumbunya dominan kecap, tapi gak sampe kemanisan! Sambelnya juga pas banget, berasa, tapi gak kelewat pedes!"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="15dp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>